{
	"rules":{
		"camelcase": 1,
		"comma-dangle": 2,
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"no-undef": 0
	},

	"env": {
		"mocha": true,
		"node": true
	},

	"extends": ["eslint:recommended"],

	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"allowImportExportEverywhere": true
	}
}
